{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"build": "run-s build:core build:react",
		"build:core": "yarn workspace @favware/syntax-highlighter-core build",
		"build:react": "yarn workspace @favware/syntax-highlighter-react build",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"style": "prettier --write packages/**/*.{ts,tsx,js,jsx,json,html,md}"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@favware/eslint-config-react-app": "^1.1.4",
		"@favware/ts-config": "^3.0.4",
		"@types/clipboard": "^2.0.1",
		"@types/node": "^14.14.2",
		"@types/react": "*",
		"@types/react-dom": "^16.9.8",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.4.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.1.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.0.4",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.0"
	}
}
